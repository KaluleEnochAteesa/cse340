<!DOCTYPE html>
<html lang="en-US">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css"> <!-- Adjust path if needed -->
  <style>
    .password-requirements {
      font-size: 0.9rem;
      color: #333;
      background-color: #f0f0f0;
      padding: 0.5em;
      margin-bottom: 0.5em;
      border-left: 4px solid #0077cc;
    }
  </style>
</head>
<body class="login-page">

  <main>
    <h1><%= title %></h1>

    <!-- Flash message -->
    <% if (typeof message !== 'undefined') { %>
      <div class="flash-message"><%= message %></div>
    <% } %>
    <% if (errors) { %>
        <ul class="notice">
          <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
    <% } %>

    <!-- Login Form -->
    <form action="/account/login" method="post" class="login-form">
      <label for="account_email">Email:</label>
      <input type="email" id="account_email" name="account_email" required
        value="<%= locals.account_email %>" />

      <label for="account_password">Password:</label>
      <div class="password-requirements">
        Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter, and 1 special character.
      </div>
      <input type="password" id="account_password" name="account_password" required
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
        title="Must be at least 12 characters, include a capital letter, a number, and a special character.">

      <button type="submit">Login</button>
    </form>

    <!-- Registration Link -->
    <p>Don't have an account? <a href="/account/register">Register here</a></p>
  </main>
</body>
</html>

